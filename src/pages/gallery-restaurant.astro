---
import CallToAction from "../components/CallToAction.astro"
import Footer from "../components/Footer.astro"
import InstagramFeed from "../components/InstagramFeed.astro"
import Navbar from "../components/Navbar.astro"
import Layout from "../layouts/Layout.astro"
---
<Layout>
    <Navbar />
    <section id="gallery" class="bg-[#f7efef] pt-32 pb-16 scroll-mt-32">
        <div class="max-w-6xl mx-auto px-4 text-center">
            <!-- Título -->
            <h2 class="font-kestrel text-4xl md:text-5xl tracking-wide text-[#3e2f2a]">
                Galería
            </h2>
            <p class="merriweather text-[#8b6f68] text-lg md:text-xl mt-1">
                Habitaciones, restaurante y ambiente.
            </p>

            <!-- Tabs -->
            <div class="flex justify-center gap-6 mt-8 text-sm font-semibold text-[#3e2f2a]">
                <button class="border-b-2 border-[#3e2f2a] pb-1">Restaurant</button>
            </div>

            <!-- Galería -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-10">
                <img src="/restaurant/rest.png" alt="Restaurant" class="rounded-lg shadow-md object-cover w-full h-[300px] sm:h-[350px]" />
                <img src="/restaurant/rest-1.png" alt="Restaurant" class="rounded-lg shadow-md object-cover w-full h-[300px] sm:h-[350px]" />
                <img src="/restaurant/rest-2.png" alt="Restaurant" class="rounded-lg shadow-md object-cover w-full h-[300px] sm:h-[350px]" />
                <img src="/restaurant/rest-3.png" alt="Restaurant" class="rounded-lg shadow-md object-cover w-full h-[300px] sm:h-[350px]" />
            </div>
        </div>
    </section>
    <InstagramFeed />
    <CallToAction />
    <Footer />
</Layout>