---
<Layout>
    <Navbar />
    <RoomsSection />
    <ThingsYouLove />

    <RoomPure subtitle="Simple" title="HABITACIÓN" price={180} features={["Baño privado (agua caliente).", "TV Cable.", "Free wifi.", "Room service.", "Intercomunicador."]} images={[simple.src, simple1.src, simple2.src, simple3.src, simple4.src]} />

    <RoomPure reverse subtitle="Doble" title="HABITACIÓN" price={220} features={["Baño privado (agua caliente).", "TV Cable.", "Free wifi.", "Room service.", "Intercomunicador."]} images={[doble.src, doble1.src, doble2.src, doble3.src]} />

    <RoomPure subtitle="Matrimonial" title="HABITACIÓN" price={220} features={["Baño privado (agua caliente).", "TV Cable.", "Free wifi.", "Room service.", "Intercomunicador."]} images={[matrimonial.src, matrimonial1.src, matrimonial2.src, matrimonial3.src, matrimonial4.src, matrimonial5.src, matrimonial6.src, matrimonial7.src, matrimonial8.src]} />

    <RoomPure reverse subtitle="Queen" title="HABITACIÓN" price={300} features={["Baño privado (agua caliente).", "TV Cable.", "Free wifi.", "Room service.", "Intercomunicador."]} images={[queen.src, queen1.src, queen2.src]} />

    <RoomPure subtitle="King Size" title="HABITACIÓN" price={320} features={["Baño privado (agua caliente).", "TV Cable.", "Free wifi.", "Room service.", "Intercomunicador."]} images={[kingSize.src, KingSize1.src]} />

    <RoomPure reverse subtitle="Triple" title="HABITACIÓN" price={280} features={["Baño privado (agua caliente).", "TV Cable.", "Free wifi.", "Room service.", "Intercomunicador."]} images={[triple.src, triple1.src, triple2.src]} />

    <RoomPure subtitle="Cuádruple" title="HABITACIÓN" price={320} features={["Baño privado (agua caliente).", "TV Cable.", "Free wifi.", "Room service.", "Intercomunicador."]} images={[cuadruple.src, cuadruple1.src, cuadruple2.src, cuadruple3.src, cuadruple4.src]} />

    <CallToAction />
    <Footer />
</Layout>