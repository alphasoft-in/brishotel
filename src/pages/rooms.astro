---
import RoomsSection from "../components/RoomsSection.astro";
import ThingsYouLove from "../components/ThingsYouLove.astro";
import Layout from "../layouts/Layout.astro";
import RoomPure from "../components/RoomPure.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import CallToAction from "../components/CallToAction.astro";
---
<Layout>
    <Navbar />
    <RoomsSection />
    <ThingsYouLove />
    <RoomPure subtitle="Matrimonial" title="HABITACIÓN"
        features={[
            "Habitación doble de 40 m² para 2 personas.",
            "Baño privado con bañera",
            "Apple TV & Netflix",
            "Desayuno incluido",
            "Se admiten mascotas",
            "Cuna disponible bajo petición.",
        ]}
        images={[
            "/rooms/matrimonial.png",
            "/rooms/matrimonial-1.png",
            "/rooms/matrimonial-2.png",
            "/rooms/matrimonial-3.png",
            "/rooms/matrimonial-4.png",
            "/rooms/matrimonial-5.png",
            "/rooms/matrimonial-6.png",
            "/rooms/matrimonial-7.png",
            "/rooms/matrimonial-8.png"
        ]}/>

    <RoomPure reverse subtitle="Queen" title="HABITACIÓN"
        features={[
            "Suite de 60 m² con sala de estar.",
            "Balcón privado con vista a la ciudad",
            "Apple TV & Netflix",
            "Desayuno incluido",
        ]}
        images={[
            "/rooms/queen.png",
            "/rooms/queen-1.png",
            "/rooms/queen-2.png"
        ]}/>

    <RoomPure subtitle="Simple" title="HABITACIÓN"
        features={[
