import Footer from "../components/Footer.astro";
import CallToAction from "../components/CallToAction.astro";

import simple from "../assets/images/rooms/simple.png";
import simple1 from "../assets/images/rooms/simple-1.png";
import simple2 from "../assets/images/rooms/simple-2.png";
import simple3 from "../assets/images/rooms/simple-3.png";
import simple4 from "../assets/images/rooms/simple-4.png";

import doble from "../assets/images/rooms/doble.png";
import doble1 from "../assets/images/rooms/doble-1.png";
import doble2 from "../assets/images/rooms/doble-2.png";
import doble3 from "../assets/images/rooms/doble-3.png";

import matrimonial from "../assets/images/rooms/matrimonial.png";
import matrimonial1 from "../assets/images/rooms/matrimonial-1.png";
import matrimonial2 from "../assets/images/rooms/matrimonial-2.png";
import matrimonial3 from "../assets/images/rooms/matrimonial-3.png";
import matrimonial4 from "../assets/images/rooms/matrimonial-4.png";
import matrimonial5 from "../assets/images/rooms/matrimonial-5.png";
import matrimonial6 from "../assets/images/rooms/matrimonial-6.png";
import matrimonial7 from "../assets/images/rooms/matrimonial-7.png";
import matrimonial8 from "../assets/images/rooms/matrimonial-8.png";

import queen from "../assets/images/rooms/queen.png";
import queen1 from "../assets/images/rooms/queen-1.png";
import queen2 from "../assets/images/rooms/queen-2.png";

import kingSize from "../assets/images/rooms/king-size.png";
import KingSize1 from "../assets/images/rooms/king-size-1.png";

import triple from "../assets/images/rooms/triple.png";
import triple1 from "../assets/images/rooms/triple-1.png";
import triple2 from "../assets/images/rooms/triple-2.png";

