---
import RoomsSection from "../components/rooms/HeroRooms.astro";
import ThingsYouLove from "../components/rooms/FeaturesRooms.astro";
import Layout from "../layouts/Layout.astro";
import RoomPure from "../components/rooms/RoomCard.astro";
import Navbar from "../components/ui/Navbar.astro";
import Footer from "../components/ui/Footer.astro";
import CallToAction from "../components/shared/CTA.astro";

import { db } from "../lib/db";
import { getRoomImages } from "../lib/images";

const rooms = db.getRooms();
---

<Layout
    title="Habitaciones y Tarifas - Bris Hotel Nasca"
    description="Explora nuestras habitaciones: Matrimoniales, Dobles, Triples y Suites. Confort y elegancia para tu descanso en Nasca."
>
    <Navbar />
    <RoomsSection />
    <ThingsYouLove />

    {
        rooms.map((room) => (
            <RoomPure
                status={room.status}
                reverse={room.reverse}
                subtitle={room.subtitle}
                title={room.title}
                price={room.price}
                features={room.features}
                images={getRoomImages(room.images)}
            />
        ))
    }

    <CallToAction />
    <Footer />
</Layout>
