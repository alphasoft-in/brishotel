        font-family: "Merriweather", serif;
    }
    .montserrat {
        font-family: "Montserrat", sans-serif;
    }
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in {
        animation: fade-in 0.3s ease-out forwards;
    }

