        max-width: 320px !important; /* Estrechar más para evitar asimetría */
        margin: 0 auto !important;
        display: block !important;
    }

    :global(.kr-smart-form) {
        width: 100% !important;
        background: transparent !important;
        border: none !important;
        box-shadow: none !important;
        padding: 0 !important;
    }

    /* Ocultar elementos innecesarios del formulario de Izipay */
    :global(.kr-smart-form .kr-header),
    :global(.kr-smart-form .kr-footer),
    :global(.kr-smart-form .kr-header-logo),
    :global(.kr-smart-form .kr-form-header),
    :global(.kr-header),
    :global(.kr-security-header),
    :global(.kr-header-text) {
        display: none !important;
    }

    /* Profesionalizar el área 3DS (Autenticación bancaria) */
