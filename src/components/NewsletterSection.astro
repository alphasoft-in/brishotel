<section class="bg-[#f4ecec] py-16">
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-10 px-6 items-center">
    
    <!-- Texto -->
    <div class="text-center md:text-left space-y-3">
      <h3 class="text-3xl md:text-4xl font-[cursive] text-[#7a4a4a]">Stay up to date</h3>
      <p class="text-gray-600 text-sm md:text-base max-w-xs md:max-w-sm mx-auto md:mx-0">
        Subscribe to get special offers, updates and more.
      </p>
    </div>

    <!-- Formulario compacto -->
    <form class="flex flex-col sm:flex-row gap-3 justify-center items-center w-full">
      <input type="text" placeholder="Full Name" required
        class="bg-white shadow-sm border border-gray-200 px-4 py-2 rounded-lg 
               focus:ring-2 focus:ring-[#7a4a4a] text-sm w-full sm:w-44" />
      <input type="email" placeholder="Your Email" required
        class="bg-white shadow-sm border border-gray-200 px-4 py-2 rounded-lg 
               focus:ring-2 focus:ring-[#7a4a4a] text-sm w-full sm:w-52" />
      <button type="submit"
        class="bg-[#7a4a4a] text-white px-5 py-2.5 rounded-lg font-medium shadow-md 
               hover:bg-[#5c3838] transition text-sm w-full sm:w-auto">
        Subscribe
      </button>
    </form>

    <!-- Info -->
    <div class="text-center md:text-right space-y-4 text-gray-700 text-sm">
      <div>
        <h4 class="font-bold tracking-wide text-[#7a4a4a]">LOCATION</h4>
        <p class="leading-relaxed">
          3033 Fifth Avenue, San Diego,<br />California 92103, United States
        </p>
      </div>
      <div>
        <h4 class="font-bold tracking-wide text-[#7a4a4a]">RECEPTION</h4>
        <p>Daily from 9 AM to 10 PM</p>
      </div>
    </div>
  </div>
</section>
